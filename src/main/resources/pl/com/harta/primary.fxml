<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.com.harta.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label text="IMDB Search" />
   <ProgressBar fx:id="pb" prefWidth="200.0" progress="0.0" />
   <HBox>
      <TextField fx:id="searchField" focusTraversable="false" promptText="Use &quot;&quot; for exact match" HBox.hgrow="ALWAYS" />
      <Button fx:id="searchButton" onAction="#setTextArea" prefWidth="80.0" text="Search" />
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </HBox>
   <TextArea fx:id="ratingTextArea" VBox.vgrow="ALWAYS" />
</VBox>
